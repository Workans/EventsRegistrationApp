{
  "compilerOptions": {
    "target": "ES2023",
    "lib": ["ES6"],
    "module": "NodeNext",
    "rootDir": "./src",
    "outDir": "./build",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"],
  "lib": ["esnext"]
}